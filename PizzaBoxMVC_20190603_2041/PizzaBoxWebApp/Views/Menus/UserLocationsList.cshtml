<!DOCTYPE html>
<html>
<head>

</head>
<body>


    @model IEnumerable<PizzaBoxWebApp.Models.LocationInfoModel>




    @{
        ViewData["Title"] = "Locations List";
    }





    <div class="text-center">
        <h1 class="display-4">Restaurant Locations</h1>
        <h1>PizzaBox</h1>
        <br>
        <br>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="UserMainMenu">Main Menu</a>
    </p>

</body>
</html>